<div class="frame">
    <div class="center">
      <figure class="background">
        <figure class="sand"></figure>
        <figure class="sky"></figure>
        <figure class="sun"></figure>
        <figure class="pyramide"></figure>
        <figure class="shadow"></figure>
        <figure class="background-fade"></figure>
      </figure>
    </div>
  </div>
<style>
    .frame {
        position: relative;
        width: 400px;
        height: 400px;
        margin: auto;
        border-radius: 8px;
        box-shadow: 4px 8px 16px 0 rgba(0,0,0,0.1);
        overflow: hidden;
        background: #333;
    }

    .center {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    }

    .background {
    clip-path: circle(100px at center center);
    width: 200px;
    height: 200px;
    }

    .background-fade {
    position: absolute;
    top: 0px;
    left: 0px;
    width: 200px;
    height: 200px;
    background: transparent;
    animation: fade 5s infinite;
    }

    .sand {
    position: absolute;
    background: rgba(236,219,100,1);
    top: 130px;
    left: 0;
    width: 200px;
    height: 100px;
    }

    .sky {
    position: absolute;
    background: rgba(110,216,252,1);
    top: 0;
    left: 0;
    width: 200px;
    height: 130px;
    }

    .pyramide {
    position: absolute;
    border-left: solid 70px rgba(255,255,255,1);
    border-top: solid 30px rgba(200,200,200,1);
    border-right: solid 30px transparent;
    border-bottom: solid 70px transparent;
    transform: rotate(45deg);
    top: 80px;
    left: 50px;
    animation: pyramide 5s infinite;
    }

    .shadow {
    position: absolute;
    background: rgba(0,0,0,0.1);
    clip-path: polygon(30.5% 0%, 67.5% 0%, 100% 20%);
    width: 400px;
    height: 200px;
    top: 130px;
    left: -100px;
    transform-origin: 50% 0%;
    animation: shadow 5s infinite;
    }

    .sun  {
    position: absolute;
    background: rgba(255,255,11,1);
    border-radius: 50%;
    width: 35px;
    height: 35px;
    top: 10px;
    left: 80px;
    transform-origin: 50% 400%;
    transform: rotate(0deg);
    box-shadow: 0 0 5px 2px rgba(255,255,11,1);
    animation: sun 5s infinite;
    }

    @keyframes .fade {
    0% {
        background: #333;
    }
    40% {
        background: transparent;
    }
    60% {
        background: transparent;
    }
    100% {
        background: #333;
    }
    }

    @keyframes sun {
    0% {
        transform: rotate(-90deg)
    }
    35% {
        transform: rotate(-30deg);
    }
    100% {
        transform: rotate(90deg);
    }
    }

    @keyframes pyramide {
    35% {
        border-left: solid 70px rgba(255,255,255,1);
        border-top: solid 30px rgba(200,200,200,1);
    }
    80% {
        border-left: solid 70px rgba(200,200,200,1);
        border-top: solid 30px rgba(255,255,255,1);
    }
    }

    @keyframes shadow {
    0% {
        clip-path: polygon(30.5% 0%, 67.5% 0%, 100% 20%);
        transform: scaleY(0);
    }
    35% {
        clip-path: polygon(30.5% 0%, 67.5% 0%, 100% 20%);
        transform: scaleY(1);
    }
    55% {
        transform: scaleY(.5);
    }
    70% {
        transform: scaleY(1);
    }
    100% {
        clip-path: polygon(33% 0%, 69% 0%, 0% 20%);
        transform: scaleY(0);
    }
    }
</style>
